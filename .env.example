# Database Configuration
# Replace with your actual PostgreSQL database URL
DATABASE_URL=postgresql://username:password@localhost:5432/baustructura

# Session Security
# Generate a strong random secret for production
SESSION_SECRET=your-super-secret-session-key-change-in-production-2024

# Email Configuration (Brevo/Sendinblue)
# Configure your SMTP settings for email notifications
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SENDER_EMAIL=support@bau-structura.de
SENDER_NAME=Bau-Structura Support

# Stripe Payment Configuration
# Configure Stripe for payment processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Maps API
# Get API key from Google Cloud Console
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# OpenAI Configuration
# Configure OpenAI for AI features
OPENAI_API_KEY=your_openai_api_key

# Azure Storage (for backups)
# Configure Azure Blob Storage for automated backups
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_BACKUP_CONTAINER=bau-structura-backups

# Microsoft Graph (for email inbox)
# Configure Microsoft Graph for email integration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id
SUPPORT_EMAIL=support@bau-structura.de

# SendGrid (alternative email service)
# Alternative email service configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# SFTP Server Configuration
# Configure SFTP server for file storage
SFTP_HOST=128.140.82.20
SFTP_PORT=22
SFTP_BASE_PATH=/home/sftp-users

# Application Configuration
NODE_ENV=production
PORT=5000